.hear-search {
  background-color: #ccc;
  height: 90rpx;
  overflow: hidden;
}
.hear-btn {
  background-color: #fff;
  text-align: center;
  height: 70rpx;
  margin: 10rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #999;
  border-radius: 20rpx;
}
.top {
  width: 100vw;
  height: 100rpx;
  display: flex;
}
.topl {
  text-align: center;
  line-height: 100rpx;
  width: 50vw;
  height: 100rpx;
}
.active {
  color: red;
  border-bottom: 6rpx solid red;
}
.list {
  width: 100vw;
  height: 90vh;
}
.img {
  width: 200rpx;
}
.listl {
  width: 100vw;
  height: 200rpx;
  margin: 10rpx;
  display: flex;
}
.title {
  font-size: xx-small;
  width: 400rpx;
  height: 180rpx;
  margin: 20rpx;
}
.price {
  color: red;
  margin: 10rpx;
}
.right {
  display: flex;
  flex-direction: column;
}